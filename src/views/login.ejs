<%- include('./components/header')  %> 
<%- include('./components/nav')  %> 

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">

      <h1 class="display-1 text-center">Criar conta ou entrar</h1>
      <p class="text-center lead">Faça login e crie sua conta abaixo</p>
      <div class="row">

        <div class="col-lg">
            <h4>Faça seu cadastro</h4>
            <p>Se você ainda não tem conta preencha o formulario abaixo</p>
            <form action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value="<%=csrfToken %>">
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Seu e-mail:</label>
                <input name="email" type="email" class="form-control">
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Sua senha</label>
                <input name="password" type="password" class="form-control">
              </div>
              <button type="submit" class="btn btn-primary">Entrar</button>

            </form>
        </div>
        <div class="col-lg">
            <h4>Faça seu login</h4>
            <p>Se já tiver conta faça seu login</p>
            <form action="/login/login"  method="POST">
              <input type="hidden" name="_csrf" value="<%=csrfToken %>">
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Seu e-mail:</label>
                <input type="email" class="form-control">
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Sua senha</label>
                <input name="password" type="password" class="form-control">
              </div>
              <button type="submit" class="btn btn-primary">Entrar</button>

            </form>
        </div>
      </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('./components/footer')  %> 
<script src="./assets/js/bundle.js"></script>