<%- include('./components/header')  %> 
<%- include('./components/nav')  %> 

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">

      <h1 class="display-1 text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos est√£o abaixo</p>


      <h1>Cadastre aqui seu contato</h1>

      <%- include('./components/messages') %> 
      <% if(contact._id){ %> 
      <form action="/contato/edit/<%= contact._id %> " method="POST">
      <%}else{ %>
        <form action="/contato/registro" method="POST">
      <% } %> 
        <input type="hidden" name="_csrf" value="<%=csrfToken %>">
        <div class="mb-3">
          <label>Nome: </label>
          <input value="<%= contact.nome %>" name="nome" type="text" class="form-control">
        </div>
        <div class="mb-3">
          <label>Sobrenome: </label>
          <input value="<%= contact.sobrenome %>"  name="sobrenome" type="text" class="form-control">
        </div>
        <div class="mb-3">
          <label>Email: </label>
          <input value="<%= contact.email %>" name="email" type="email" class="form-control">
        </div>
        <div class="mb-3">
          <label>Telefone: </label>
          <input value="<%= contact.telefone %>" name="telefone" type="tel" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>

      </form>
        
    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('./components/footer')  %> 
<script src="./assets/js/bundle.js"></script>